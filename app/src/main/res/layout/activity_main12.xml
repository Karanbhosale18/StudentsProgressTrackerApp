<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity13"
    android:orientation="vertical"
    android:background="@drawable/aboutbackimage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:hint="HOW CAN WE HELP ?"
        android:textColorHint="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp">
    <ImageButton
        android:id="@+id/ib1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/contactus"
        android:layout_marginLeft="80dp"
        ></ImageButton>

        <ImageButton
            android:id="@+id/ib2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/feedback"
            ></ImageButton>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CONTACT US"
        android:textSize="20dp"
        android:layout_marginLeft="80dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="3dp"
        android:hint="FEEDBACK"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"></TextView>
</LinearLayout>
<ImageButton
    android:id="@+id/ib3"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="80dp"
    android:background="@drawable/aboutapk1"
    ></ImageButton>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="ABOUT APK"
    android:layout_marginLeft="80dp"
    android:layout_marginRight="35dp"
    android:textSize="20dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    ></TextView>
</LinearLayout>