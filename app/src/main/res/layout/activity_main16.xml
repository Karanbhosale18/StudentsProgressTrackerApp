<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity16"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/aboutapk1"
            android:layout_marginLeft="70dp"
            ></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ABOUT APPLICATION"
            android:textColorHint="@color/black"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            ></TextView>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="The Student Management and Assistance app addresses the need for an efficient system to manage student attendance and marks. The app provides to both teachers and students, providing clear functionalities for each role. Teachers can sign in to their dashboard to upload attendance data and enter student marks, while students can log in to access their personalized dashboard and view attendance records and uploaded marks."
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        ></TextView>
</LinearLayout>